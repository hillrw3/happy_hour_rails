<!DOCTYPE html>
<html>
<head>
  <title>Hour Hound</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" type="text/css" href="/app.css">
  <meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />
  <script src='https://api.tiles.mapbox.com/mapbox.js/v1.6.4/mapbox.js'></script>
  <link href='https://api.tiles.mapbox.com/mapbox.js/v1.6.4/mapbox.css' rel='stylesheet' />
</head>
<body>

<div id="nav_bar">
  <a class="nav_buttons" href="/categories">Categories</a>
  <a class="nav_buttons" href="/favorites">Favorites</a>
  <a class="nav_buttons" href="/placeholder">Placeholder</a>
  <% if session[:user] == nil %>
    <a class="nav_buttons" href='/users/signin'>Log In</a>
  <% else %>
    <a class="nav_buttons" href="/users/sign_out">Log Out</a>
  <% end %>
</div>

<div id="wrapper">

  <%= yield %>

</div>
</body>
</html>
