<h1 class="title">Edit <%= @happy_hour.name %>!</h1>

<% if @happy_hour.errors.present? %>
  <div class='errors'>
    <% @happy_hour.errors.full_messages.each do |error| %>
      <%= error %>
    <% end %>
  </div>
<% end %>

<div class="opaque-box">

  <%= form_for @happy_hour, url: happy_hour_path(id: @happy_hour.id) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <%= f.label :description, "Happy Hour Info" %>
    <%= f.text_area :description %>
    <br>
    <%= f.submit %>

  <% end %>

</div>