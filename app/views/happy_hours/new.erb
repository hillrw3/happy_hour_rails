<h1 class="title">Add a location!</h1>

<% if @happy_hour.errors.present? %>
  <div class='errors'>
    <% @happy_hour.errors.full_messages.each do |error| %>
      <%= error %>
    <% end %>
  </div>
<% end %>

<%= form_for @happy_hour, url: happy_hours_path do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :phone %>
  <%= f.text_field :phone %>
  <br>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <br>
  <%= f.submit %>

<% end %>