<h1 class="title">Edit <%= @location.name %>!</h1>

<% if @location.errors.present? %>
  <div class='errors'>
    <% @location.errors.full_messages.each do |error| %>
      <%= error %>
    <% end %>
  </div>
<% end %>

<div class="opaque-box">

  <%= form_for @location, url: location_path(id: @location.id) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <%= f.label :description, "Happy Hour Info" %>
    <%= f.text_area :description %>
    <br>
    <%= f.submit %>

  <% end %>

</div>